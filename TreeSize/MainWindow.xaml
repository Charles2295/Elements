<Window x:Class="TreeSize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeSize"
        mc:Ignorable="d"
        Title="Elements" Height="500" Width="800" Background="#FFECEBE3" BorderBrush="White" Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Row1" Height="*"/>
            <RowDefinition x:Name="Row2" Height="*"/>
            <RowDefinition x:Name="Row3" Height="*"/>
            <RowDefinition x:Name="Row4" Height="*"/>
            <RowDefinition x:Name="Row5" Height="*"/>
            <RowDefinition x:Name="Row6" Height="*"/>
            <RowDefinition x:Name="Row7" Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="Column1" Width="*"/>
                <ColumnDefinition x:Name="Column2" Width="*"/>
                <ColumnDefinition x:Name="Column3" Width="*"/>
                <ColumnDefinition x:Name="Column4" Width="*"/>
                <ColumnDefinition x:Name="Column5" Width="*"/>
                <ColumnDefinition x:Name="Column6" Width="*"/>
                <ColumnDefinition x:Name="Column7" Width="*"/>
                <ColumnDefinition x:Name="Column8" Width="*"/>
                <ColumnDefinition x:Name="Column9" Width="*"/>
                <ColumnDefinition x:Name="Column10" Width="*"/>
                <ColumnDefinition x:Name="Column11" Width="*"/>
                <ColumnDefinition x:Name="Column12" Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="HydrogenButton" Grid.Column="0" Grid.Row="1" Content="H" Background="#FF80CBC4" Width="40" Height="40" BorderBrush="Transparent" Style="{StaticResource btnRounded}"></Button>
            <Button x:Name="LithiumButton" Grid.Column="1" Grid.Row="1" Content="Li" Background="#FFFFAB91" Width="40" Height="40" BorderBrush="Transparent" Style="{StaticResource btnRounded}"></Button>
        </Grid>
    </Grid>
</Window>
